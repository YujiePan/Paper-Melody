            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_c4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_d4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_e4"
            layout="@layout/item_key_gradient_white" />

        <ImageView
            android:layout_marginLeft="-0.4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/key_effect_f4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_g4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_a4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_b4"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_c5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_d5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_e5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_f5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_g5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_a5"
            layout="@layout/item_key_gradient_white" />

        <include
            android:id="@+id/key_effect_b5"
            layout="@layout/item_key_gradient_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/mode"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_mode_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="mode"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrument"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_instrument_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="instrument"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_play_over"
            android:background="#00FF00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/play_over"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</FrameLayout>
